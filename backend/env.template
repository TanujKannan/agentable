# Fly Machines API Configuration
# Get your API token from: https://fly.io/user/personal_access_tokens
FLY_API_TOKEN=your_fly_api_token_here

# Your Fly.io app name where machines will be created
FLY_APP_NAME=your-app-name

# Your Fly.io organization slug (get from: fly orgs list)
FLY_ORG_SLUG=your-org-slug

# NATS URL for log streaming (default should work for most cases)
FLY_NATS_URL=nats://[fdaa::3]:4223

# OpenAI API Key for SpecAgent (fallback when Fly Machines not configured)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Serper API Key for search functionality
SERPER_API_KEY=your_serper_api_key_here

# Application Settings
PORT=8000

# Force CrewAI execution instead of Fly Machines (set to "true" to enable AI agents with tools)
FORCE_CREWAI=true 